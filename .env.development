NODE_ENV=development
# Backend
BACKEND_PORT=3000
MONGODB_URI=mongodb://host.docker.internal:27017/webchat
BACKEND_DOMAIN=localhost
# URLs
FRONTEND_PORT=5173
FRONTEND_DOMAIN=localhost
FRONTEND_URL=http://${FRONTEND_DOMAIN}:${FRONTEND_PORT}
API_URL=http://${FRONTEND_DOMAIN}:${BACKEND_PORT}

# Vite (frontend) – bắt buộc phải có tiền tố VITE_
VITE_API_BASE_URL=http://${BACKEND_DOMAIN}:${BACKEND_PORT}
VITE_SOCKET_URL=${API_URL}

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload Configuration
FILE_MAX_SIZE=10485760
UPLOAD_PATH=uploads

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# API Keys
VALID_API_KEYS=api-key-1,api-key-2